<div class="profile">
  <%= render @user %>
  <table class="purchases">
    <thead>
      <tr>
        <th>Produkt</th>
        <th>Pris</th>
        <th>Antal</th>
      </tr>
    </thead>
    <tbody>
      <% @purchases_grouped.each do |product, purchases| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= purchases.size %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h2>Alla dina streck</h2>
    <table class="purchases">
    <thead>
      <tr>
        <th>Produkt</th>
        <th>Pris</th>
        <th>Streckad</th>
      </tr>
    </thead>
    <tbody>
      <% @purchases.each do |purchase| %>
        <tr>
          <td><%= purchase.product.name %></td>
          <td><%= purchase.product.price %></td>
          <td><%= purchase.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <% if current_user.admin? %>
          <td><%= link_to 'Ta bort', purchase, method: :delete, data: { confirm: 'Är du säker?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
