<section class="profile">
  <%= render @user %>
  <% if current_user.admin? && !current_user?(@user) %>
    <%= button_to "Delete user", @user, method: :delete, data: { confirm: "You sure?" } %>
  <% end %>

  <% if current_user?(@user) %>
    <%= link_to 'View your purchases', purchases_user_path %>
  <% end %>
</section>
