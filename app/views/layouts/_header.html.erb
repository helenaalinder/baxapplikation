<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to root_url do %>
      <%= image_tag "piska.png", id: "logo" %>
      <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Användare <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profil", current_user %></li>
              <li><%= link_to "Inställningar", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Logga ut", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Logga in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>