<h1>Önska produkter</h1>
<div class="makeawishform">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<%= render 'form', comment: @comment %>
		</div>
	</div>
</div>
<div class="makeawishtable">
	<table class="purchases">
		<thead>
			<tr>
				<th>Produkt</th>
				<th>Önskad av</th>
			</tr>
		</thead>

		<tbody>
			<% @comments.each do |c| %>
			<tr>
				<td><%= c.comment %></td>
				<td><%= c.user.name%></td>
				<td><%= link_to 'Show', c %></td>
        		<td><%= link_to 'Edit', edit_comment_path(c) %></td>
        		<td><%= link_to 'Destroy', c, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>

